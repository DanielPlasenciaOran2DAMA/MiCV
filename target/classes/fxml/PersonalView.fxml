<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<GridPane fx:id="view" alignment="TOP_RIGHT" hgap="5.0"
	vgap="5.0" xmlns="http://javafx.com/javafx/11.0.0"
	xmlns:fx="http://javafx.com/fxml/1">
	<columnConstraints>
		<ColumnConstraints halignment="RIGHT"
			hgrow="SOMETIMES" />
		<ColumnConstraints hgrow="ALWAYS" prefWidth="400.0" />
		<ColumnConstraints hgrow="SOMETIMES" />
		<ColumnConstraints hgrow="SOMETIMES"
			maxWidth="-Infinity" />
	</columnConstraints>
	<rowConstraints>
		<RowConstraints vgrow="SOMETIMES" />
		<RowConstraints minHeight="10.0" prefHeight="30.0"
			vgrow="SOMETIMES" />
		<RowConstraints minHeight="10.0" prefHeight="30.0"
			vgrow="SOMETIMES" />
		<RowConstraints minHeight="10.0" prefHeight="30.0"
			vgrow="SOMETIMES" />
		<RowConstraints minHeight="10.0" prefHeight="30.0"
			vgrow="SOMETIMES" />
		<RowConstraints minHeight="10.0" prefHeight="30.0"
			vgrow="SOMETIMES" />
		<RowConstraints minHeight="10.0" prefHeight="30.0"
			vgrow="SOMETIMES" />
		<RowConstraints minHeight="10.0" prefHeight="30.0"
			vgrow="SOMETIMES" />
		<RowConstraints prefHeight="150.0" vgrow="SOMETIMES" />
	</rowConstraints>
	<children>
		<Label text="DNI/NIE/Pasaporte" />
		<Label text="Nombre" GridPane.rowIndex="1" />
		<Label text="Apellidos" GridPane.rowIndex="2" />
		<Label text="Fecha de nacimiento" GridPane.rowIndex="3" />
		<Label text="Direccion" GridPane.rowIndex="4"
			GridPane.valignment="TOP" />
		<Label text="Código Postal" GridPane.rowIndex="5" />
		<Label text="Localidad" GridPane.rowIndex="6" />
		<Label text="País" GridPane.rowIndex="7" />
		<Label text="Nacionalidad" GridPane.rowIndex="8"
			GridPane.valignment="TOP" />
		<TextField fx:id="dniText" GridPane.columnIndex="1"
			GridPane.columnSpan="2" GridPane.hgrow="ALWAYS"
			GridPane.vgrow="NEVER" />
		<TextField fx:id="nombreText" GridPane.columnIndex="1"
			GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1"
			GridPane.vgrow="NEVER" />
		<TextField fx:id="apellidosText" GridPane.columnIndex="1"
			GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2"
			GridPane.vgrow="NEVER" />
		<TextField fx:id="localidadText" GridPane.columnIndex="1"
			GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" GridPane.rowIndex="6"
			GridPane.vgrow="NEVER" />
		<TextField fx:id="codPostalText" maxWidth="-Infinity"
			prefWidth="50.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
		<ComboBox fx:id="paisCombo" prefWidth="150.0"
			promptText="Seleccione un país" GridPane.columnIndex="1"
			GridPane.rowIndex="7" />
		<ListView fx:id="nacionalidad"
			maxHeight="1.7976931348623157E308" GridPane.columnIndex="1"
			GridPane.hgrow="ALWAYS" GridPane.rowIndex="8" GridPane.vgrow="ALWAYS" />
		<DatePicker fx:id="fechaNacDate" GridPane.columnIndex="1"
			GridPane.rowIndex="3" />
		<TextArea fx:id="direccionTextArea" prefHeight="200.0"
			prefWidth="200.0" GridPane.columnIndex="1" GridPane.columnSpan="2"
			GridPane.hgrow="ALWAYS" GridPane.rowIndex="4" GridPane.vgrow="ALWAYS" />
		<VBox minHeight="-Infinity" spacing="5.0"
			GridPane.columnIndex="2" GridPane.rowIndex="8">
			<children>
				<Button fx:id="anadirButton"
					maxWidth="1.7976931348623157E308" mnemonicParsing="false"
					onAction="#onAnadirButtonAction" text="+" />
				<Button fx:id="quitarButton"
					maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" mnemonicParsing="false"
					onAction="#onQuitarButtonAction" text="-" />
			</children>
		</VBox>
	</children>
	<padding>
		<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
	</padding>
</GridPane>